<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="csrf-token" content="<%= csrfToken %>">
  <title>
    <%= title %>
  </title>
  <link href="./css/styles.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="grid grid-cols-6">
    <div class="col-start-3 col-span-2">
      <%- include('header.ejs') %>

        <% if (messages.error) { %>
          <div class="error-message">
            <ul>
              <% messages.error.forEach(function(message) { %>
                <li>
                  <%= message %>
                </li>
                <% }); %>
            </ul>
          </div>
          <% } %>

            <% if (messages.success) { %>
              <div class="success-message">
                <%= messages.success %>
              </div>
              <% } %>

                <h6 class="py-4">Sign-Up as a new User</h6>
                <form action="/users" method="post">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class="py-3">
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName"
                      class="border border-gray-300 rounded text-gray-700 py-2 px-2 w-full">
                  </div>
                  <div class="py-3">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName"
                      class="border border-gray-300 rounded text-gray-700 py-2 px-2 w-full">
                  </div>
                  <div class="py-3">
                    <label for="email">Email</label>
                    <input type="email" name="email"
                      class="border border-gray-300 rounded text-gray-700 py-2 px-2 w-full">
                  </div>
                  <div class="py-3">
                    <label for="password">Password</label>
                    <input type="password" name="password"
                      class="border border-gray-300 rounded text-gray-700 py-2 px-2 w-full">
                  </div>
                  <div class="py-3">
                    <button type="submit"
                      class="text-white bg-green-600 hover:bg-green-800 px-5 py-1.5 rounded font-medium mr-2 mb-2">Sign-Up</button>
                  </div>
                </form>
    </div>
  </div>
</body>

</html>