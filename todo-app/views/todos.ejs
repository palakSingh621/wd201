<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <title>
        <%= title %>
    </title>
    <link href="./css/styles.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        let token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");

        function updateTodo(id, isCompleted) {
            fetch(`/todos/${id}`, {
                credentials: 'same-origin',
                method: "PUT",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    "_csrf": token,
                    "completed": isCompleted
                }),
            }).then((res) => {
                if (res.ok) {
                    window.location.reload();
                }
            })
                .catch((err) => console.error(err));
        }

        function deleteTodo(id) {
            fetch(`/todos/${id}`, {
                credentials: 'same-origin',
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({
                    "_csrf": token,
                })
            })
                .then((res) => {
                    if (res.ok) {
                        window.location.reload();
                    }
                })
                .catch((err) => console.error(err));
        }

        const logout = () => {
            window.location.href = '/signout'
        }
    </script>
</head>

<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <%- include('header.ejs') %>
                <% if(messages.success){%>
                    <div class="bg-green-200 text-green-800 p-3 rounded mb-4">
                        <%= messages.success %>
                    </div>
                    <% } %>
                        <button class="m-5 px-2 py-1 rounded text-white bg-red-600" onclick="logout()">signout</button>
                        <form action="/todos" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                            <div class="flex gap-2 py-4">
                                <div class="flex-auto">
                                    <input type="text" name="title" placeholder="What's next?"
                                        class="border border-gray-600 rounded w-full p-2 text-gray-700 text-sm" required>
                                </div>
                                <div class="flex-auto">
                                    <input type="date" name="dueDate"
                                        class="border border-gray-600 rounded w-full p-2 text-gray-700 text-sm leading-tight" required>
                                </div>
                                <div class="flex-none">
                                    <button type="submit"
                                        class="bg-green-600 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2">Add</button>
                                </div>
                            </div>
                        </form>
                        <div>
                            <%- include('todo.ejs')%>
                        </div>
                        <% if(messages && messages.error && messages.error.length> 0) { %>
                            <% for(var i=0; i<messages.error.length; i++) { %>
                                <div class="bg-red-200 text-red-800 p-3 rounded mb-4">
                                    <ul>
                                        <li>
                                            <%= messages.error[i] %>
                                        </li>
                                    </ul>
                                </div>
                                <% } %>
                                    <% } %>
                                        <%- include('footer.ejs') %>
        </div>
    </div>
</body>

</html>